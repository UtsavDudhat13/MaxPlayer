<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.PermissionActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tv_permission_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?android:textColorPrimary"
                android:text="@string/strPermissionTitle"
                android:layout_below="@+id/logo"
                android:fontFamily="@font/semibold"
                android:layout_marginHorizontal="8dp"
                android:gravity="center"
                android:layout_marginBottom="18dp"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"/>

        <com.airbnb.lottie.LottieAnimationView
                android:layout_width="164dp"
                android:layout_gravity="center"
                android:layout_height="164dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_fileName="permission.lottie"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?android:textColorPrimary"
                android:text="@string/strPermissionDesc"
                android:layout_below="@+id/logo"
                android:layout_marginHorizontal="8dp"
                android:gravity="center"
                android:layout_marginTop="18dp"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"/>

        <TextView
                android:id="@+id/tv_permission_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?android:textColorPrimary"
                android:text="@string/strPermissionDesc2"
                android:layout_marginHorizontal="8dp"
                android:gravity="center"
                android:layout_below="@+id/logo"
                android:layout_marginTop="6dp"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"/>

        <Button
                android:id="@+id/btn_allow_permission"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:background="@drawable/bg_button"
                android:paddingHorizontal="44dp"
                android:text="Allow Permission"
                android:textSize="16sp"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="24dp"/>

    </LinearLayout>

</RelativeLayout>