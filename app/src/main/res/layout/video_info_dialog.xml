<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="16dp">
    <RelativeLayout
        android:id="@+id/namell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/vname"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Name"/>
        <TextView
            android:id="@+id/textView_video_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/vname"
            android:layout_marginStart="10dp"
            android:textSize="16sp"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/pathll"
        android:layout_below="@+id/namell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"

        >
        <TextView
            android:id="@+id/vpath"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Location"
            />
        <TextView
            android:id="@+id/textView_video_location"
            android:layout_toRightOf="@+id/vpath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginStart="10dp"

            />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/lablell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"

        android:layout_below="@+id/pathll">




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:text="Date"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Size"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Length"
            android:layout_marginTop="8dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Resolution"

            android:layout_marginTop="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"

        android:layout_toEndOf="@+id/lablell"
        android:layout_below="@+id/pathll"
        android:layout_marginStart="10dp">




        <TextView
            android:id="@+id/textView_video_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:id="@+id/textView_video_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:id="@+id/textView_video_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            />


        <TextView
            android:id="@+id/textView_video_resolution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>



</RelativeLayout>
